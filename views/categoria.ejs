<link rel="stylesheet" href="/stylesheets/prodotticategoria.css">
<h1 style="padding-left:10px;"> <%- nomeCategoria %> </h1>
<div class="categoria-container center-contents">
    <!-- DIV CHE CONTIENE UN PRODOTTO -->
    <%for(var i = 0; i< prodotti.length; i++){ %>
        <div class="item-c">
            <div class="item-c-image" onclick="window.location = window.location.origin + '/prodotto?pro=<%- prodotti[i].codice %>';"> <img class="item-c-inner-image" src="/images/prodotti/<%- prodotti[i].codice %>_1" onerror="$(this).attr('src','/images/prodotti/nondisp.png');"> </div>
            <div class="item-c-name" onclick="window.location = window.location.origin + '/prodotto?pro=<%- prodotti[i].codice %>';">
                <%- prodotti[i].nome %>
            </div>
            <div class="item-c-operations">
                <ul class="item-price-add-cart">
                    <li> <span>Costo : <%- prodotti[i].prezzo %> â‚¬</span> </li>
                    <li>
                        <% if(prodotti[i].quantita > 0){ %>
                            <p class="item-availability"> disponibile </p>
                            <% } else if(auth == true) { %>
                                <p class="item-availability" onclick="avvisaUser(<%- prodotti[i].codice %>);"> avvisami quando disponibile </p>
                                <% }else{%>
                                    <p class="item-availability"> NON disponibile</p>
                                    <%} %>
                    </li>
                </ul>
            </div>
        </div>
        <%}%>
            <!-- FINE DIV CHE CONTIENE UN PRODOTTO -->
</div>