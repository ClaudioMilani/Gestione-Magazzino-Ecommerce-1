<html lang="en">

<head>
    <!-- GENERAL IMPORTS -->
    <script type="text/javascript" src="/javascripts/socketio/socket.io.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script type="text/javascript" src="/javascripts/ajaxCall.js"></script>
    <link rel="stylesheet" href="/stylesheets/overlay.css" />
    <!-- GENERAL IMPORTS -->

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>
        <% title %>
    </title>
    <style>
        html,
        body {
            margin: 0;
            padding: 0;
            border: 0;
            height: 100%;
            width: 100%;
        }

        * {
            box-sizing: border-box;
        }

        table {
            border-collapse: collapse;
        }
    </style>
    <script type="text/javascript">
        function stampaMenu(data) {
            $('#logout').show();
            for (var i = 0; i < data.length; i++) {
                $('#menu_bar').append("<span style=\"margin:10px; padding: 4px 10px; border: 1px solid; background-color: orange; cursor: pointer;\" onclick=\"" + data[i].naviga + "\">" + data[i].nome + "</span>");
            }
        }

        $(document).ready(function () {
            <% if (data !== null) { %>
                stampaMenu(<%- JSON.stringify(data) %>);
                $('#logout').click(function () {
                    window.location = window.location.origin + '/login'
                });
            <% } %>
        });
    </script>
</head>

<body>
    <table style="width: 100%; height:100%; background-color: lightyellow; empty-cells: show;">
        <tr>
            <td style="height: 75px; width:100%; background-color:aquamarine;">
                <table style="width: 100%;">
                    <tr>
                        <td style="width:100%; background-color: #ddd" id="menu_bar"></td>
                        <td style=" text-align: right; padding: 5px; padding-right: 20px;">
                            <button id="logout" style="display: none;">logout</button>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
        <tr>
            <td id="contenuti" style="width:100%; background-color: cornflowerblue;">
                <%- include(contenuto) %>
            </td>
        </tr>
    </table>
    <!-- GENERAL IMPORTS -->
    <% include ../overlay %>
        <!-- GENERAL IMPORTS -->
</body>

</html>