<html lang="en">

<head>
    <!-- GENERAL IMPORTS -->
    <script type="text/javascript" src="/javascripts/socketio/socket.io.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script type="text/javascript" src="/javascripts/ajaxCall.js"></script>
    <link rel="stylesheet" href="/stylesheets/overlay.css" />
    <!-- GENERAL IMPORTS -->

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>
        <% title %>
    </title>
    <style>
        html,
        body {
            margin: 0;
            padding: 0;
            border: 0;
            height: 100%;
            width: 100%;
        }

        * {
            box-sizing: border-box;
        }

        table {
            border-collapse: collapse;
        }
    </style>
    <script type="text/javascript">
        var ini = <%- JSON.stringify(data) %>;
        function naviga(pagina) {
            ajaxCall("GET", window.location.origin + '/amministrazione/' + pagina, 2000, {},
                function (data) {
                    if (data == 'sessionescaduta')
                        stampaMenu(null);
                    else {
                        $('#contenuti').html('');
                        $('#contenuti').html(data);
                    }
                    
                }
            );
        }

        function stampaMenu(data) {
            if (data === null) {
                $('#logout').hide();
                $('#menu_bar').html('');
                naviga('login');
            } else {
                $('#logout').show();
                for (var i = 0; i < data.length; i++) {
                    $('#menu_bar').append("<span style=\"margin:10px; padding: 4px 10px; border: 1px solid; background-color: orange; cursor: pointer;\" onclick=\"" + data[i].naviga + "\">" + data[i].nome + "</span>");
                }
            }
        }

        $(document).ready(function () {
            if (ini === null)
                naviga('login');
            else
                stampaMenu(ini);
            $('#logout').click(function () {
                ajaxCall("POST", window.location.origin + '/amministrazione/logout', 5000, {}, function (data) {
                    stampaMenu(null); $('#contenuti').html(data);
                    
                });
            });
        });
    </script>
</head>

<body>
    <table style="width: 100%; height:100%; background-color: lightyellow; empty-cells: show;">
        <tr>
            <td style="height: 75px; width:100%; background-color:aquamarine;">
                <table style="width: 100%;">
                    <tr>
                        <td style="width:100%; background-color: #ddd" id="menu_bar"></td>
                        <td style=" text-align: right; padding: 5px; padding-right: 20px;">
                            <button id="logout" style="display: none;">logout</button>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
        <tr>
            <td id="contenuti" style="width:100%; background-color: cornflowerblue;">
            </td>
        </tr>
    </table>
    <!-- GENERAL IMPORTS -->
    <% include ../overlay %>
        <!-- GENERAL IMPORTS -->
</body>

</html>